{
  "id": "unac_maestria_informe_cualitativo",
  "universidad": "UNAC",
  "tipo": "informe_posgrado",
  "enfoque": "cualitativo",
  "version": "1.1.0",
  "descripcion": "Plantilla Maestría UNAC - Informe Final (enfoque cualitativo) según ANEXO 06 de la directiva.",
  "output_name": "UNAC_Maestria_Informe_Cualitativo.docx",
  "logo_path": "assets/LogoUNAC.png",
  "open_after_generate": true,

  "page_setup": {
    "page": "A4",
    "margins_cm": { "left": 3.5, "right": 2.5, "top": 3.0, "bottom": 3.0 },
    "font": { "name": "Arial", "size_pt": 12 }
  },

  "cover": {
    "universidad_linea": "UNIVERSIDAD NACIONAL DEL CALLAO",
    "unidad": "(ESCUELA DE POSGRADO, UNIDAD DE POSGRADO ...)",
    "titulo": "TÍTULO DEL INFORME FINAL y/o TESIS",
    "grado_maestria": "MAESTRO EN <NOMBRE EXACTO DEL PROGRAMA>",
    "autor": "NOMBRES Y APELLIDOS DEL / LOS AUTOR(ES)",
    "asesor": "NOMBRES Y APELLIDOS DEL / LOS ASESOR(ES)",
    "linea": "XXXXXXXXXXXXXX",
    "ciudad": "Callao",
    "anio": "2026",
    "pais": "PERÚ",

    "logo_width_cm": 3.5,
    "title_size_pt": 14,
    "text_size_pt": 12
  },

  "pre_pages": [
    {
      "title": "PÁGINA DE RESPETO",
      "title_level": 4,
      "lines": ["{{COMPLETAR}}"],
      "page_break_after": true
    },
    {
      "title": "INFORMACIÓN BÁSICA",
      "title_level": 4,
      "lines": [
        "FACULTAD: {{COMPLETAR}}",
        "UNIDAD DE INVESTIGACIÓN: {{COMPLETAR}}",
        "TÍTULO: {{COMPLETAR}}",
        "AUTOR (es) / CODIGO ORCID / DNI: {{COMPLETAR}}",
        "ASESOR y COASESOR / CODIGO ORCID / DNI: {{COMPLETAR}}",
        "LUGAR DE EJECUCIÓN: {{COMPLETAR}}",
        "UNIDAD DE ANÁLISIS: {{COMPLETAR}}",
        "TIPO / ENFOQUE / DISEÑO DE INVESTIGACIÓN: {{COMPLETAR}}",
        "TEMA OCDE: {{COMPLETAR}}"
      ],
      "page_break_after": true
    },
    {
      "title": "HOJA DE REFERENCIA DEL JURADO Y APROBACIÓN (Deberá Consignar el Acta de sustentación)",
      "title_level": 4,
      "lines": ["{{COMPLETAR}}"],
      "page_break_after": true
    },
    {
      "title": "DEDICATORIA (obligatorio)",
      "title_level": 1,
      "lines": ["{{COMPLETAR}}"],
      "page_break_after": true
    },
    {
      "title": "AGRADECIMIENTO (opcional, en una página)",
      "title_level": 1,
      "lines": ["{{COMPLETAR}}"],
      "page_break_after": true
    }
  ],

  "toc": { "min_level": 1, "max_level": 3 },
  "include_list_of_tables": true,
  "include_list_of_figures": true,

  "structure_rules": {
    "add_placeholder_after_heading": true,
    "page_break_after_level_1": true
  },

  "structure": [
    { "level": 1, "title": "RESUMEN" },
    { "level": 1, "title": "ABSTRACT (para el doctorado en dos idiomas)" },

    { "level": 1, "title": "INTRODUCCIÓN" },

    { "level": 1, "title": "I. PLANTEAMIENTO DEL PROBLEMA" },
    { "level": 2, "title": "1.1. Descripción de la realidad problemática." },
    { "level": 2, "title": "1.2. Formulación del problema (problema general y específicos)." },
    { "level": 2, "title": "1.3. Objetivos (general y específicos)." },
    {
      "level": 2,
      "title": "1.4. Justificación (de acuerdo a la naturaleza del problema).",
      "lines": [
        "(Nota: en la directiva aparece como \"7.1\"; aquí lo dejamos como 1.4 para mantener la numeración coherente.)"
      ]
    },
    { "level": 2, "title": "1.5. Delimitantes de la investigación (teórico, temporal, espacial)." },

    { "level": 1, "title": "REVISIÓN DE LA LITERATURA" },
    { "level": 2, "title": "2.1. Antecedentes: Internacional y nacional." },
    { "level": 2, "title": "2.2. Marco Conceptual" },
    { "level": 2, "title": "2.3. Definición de términos básicos: Funcionales a la investigación del problema." },

    { "level": 1, "title": "III. METODOLOGÍA DEL PROYECTO" },
    { "level": 2, "title": "3.1. Categorías, Subcategorías y matriz de categorización apriorística." },
    { "level": 2, "title": "3.2. Escenario de estudio" },
    { "level": 2, "title": "3.3. Participantes" },
    { "level": 2, "title": "3.4. Técnicas e instrumentos de recolección de datos" },
    { "level": 2, "title": "3.5. Procedimiento" },
    { "level": 2, "title": "3.6. Rigor científico" },
    { "level": 2, "title": "3.7. Método de análisis de datos" },
    { "level": 2, "title": "3.8. Aspectos Éticos en Investigación" },

    { "level": 1, "title": "IV. RESULTADOS" },
    { "level": 1, "title": "V. DISCUSIÓN DE RESULTADOS" },
    { "level": 1, "title": "VI. CONCLUSIONES" },
    { "level": 1, "title": "VII. RECOMENDACIONES" },

    {
      "level": 1,
      "title": "VIII. REFERENCIAS BIBLIOGRAFICAS",
      "lines": [
        "De acuerdo a normas internacionales:",
        "- APA, Vancouver (para ciencias empresariales y de la salud)",
        "Utilizar los gestores de referencias bibliográficas:",
        "- Mendeley, Zootero o Word"
      ]
    },

    {
      "level": 1,
      "title": "ANEXOS",
      "lines": [
        "- Matriz de Categorización",
        "- Instrumentos validados.",
        "- Consentimiento informado en caso de ser necesario.",
        "- Otros anexos necesarios de acuerdo a la naturaleza del problema."
      ]
    }
  ]
}
