    { "level": 2, "title": "1.3. Objetivos (general y específicos)." },
    { "level": 2, "title": "1.4. Justificación." },
    { "level": 2, "title": "1.5. Delimitantes (teórico, temporal, espacial)." },

    { "level": 1, "title": "II. MARCO TEÓRICO" },
    { "level": 2, "title": "2.1. Antecedentes (internacional y nacional)." },
    { "level": 2, "title": "2.2. Bases teóricas." },
