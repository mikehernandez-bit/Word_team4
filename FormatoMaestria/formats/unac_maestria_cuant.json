    { "level": 2, "title": "4.3. Población y muestra" },
    { "level": 2, "title": "4.4. Lugar de estudio y periodo desarrollado" },
    { "level": 2, "title": "4.5. Técnicas e instrumentos" },
    { "level": 2, "title": "4.6. Análisis y procesamiento de datos" },
    { "level": 2, "title": "4.7. Aspectos éticos en investigación" },

    { "level": 1, "title": "RESULTADOS" },
    { "level": 2, "title": "5.1. Resultados descriptivos." },
    { "level": 2, "title": "5.2. Resultados inferenciales." },

    { "level": 1, "title": "V. DISCUSIÓN DE RESULTADOS" },
